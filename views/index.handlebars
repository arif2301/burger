<h1>Eat Da Burger</h1>

<h2>Burgers you can eat</h2>

<ul>
  {{#each burgers}}
    <p>{{this.id}}. {{this.burger_name}}</p>
    {{#unless sleepy}}
      	<button class="change-sleep" data-id="{{id}}" data-newsleep="{{sleep}}">
		{{#if devoured}}SLEEP TIME!{{else}}WAKE UP!{{/if}}
	</button>
      {{!-- {{> cats/cat-block sleep=true}} --}}
    {{/unless}}
  {{/each}}
</ul>

